# OpenAI Configuration
OPENAI_API_KEY=your-api-key-here
OPENAI_MODEL=text-embedding-3-large
OPENAI_DIMENSIONS=1536
OPENAI_CHUNK_SIZE=1000
OPENAI_MAX_RETRIES=3
OPENAI_TIMEOUT=60.0
OPENAI_RETRY_MIN_SECONDS=4
OPENAI_RETRY_MAX_SECONDS=20

# Vector Store Configuration
VECTORSTORE_PERSIST_DIRECTORY=src/data/chroma
VECTORSTORE_COLLECTION_NAME=langchain

# Embedding Configuration
SHOW_EMBEDDING_PROGRESS=true
ENABLE_TIKTOKEN=true

# Ingestion Configuration
PDF_DIRECTORY=src/pdfs
CHUNKS_DIRECTORY=src/data/chunks
CHUNK_SIZE=512
CHUNK_OVERLAP=50
SAVE_CHUNKS=true

# Chat Configuration
CHAT_MODEL_NAME=gpt-4
CHAT_TEMPERATURE=0.0
CHAT_MAX_TOKENS=2000
CHAT_TOP_K=3
CHAT_RETURN_SOURCE_DOCS=true
